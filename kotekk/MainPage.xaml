<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kotekk.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image x:Name="kot" Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" />
            <Button x:Name="CounterBtn" Text="Pokaż ciekawostkę" Clicked="OnCounterClicked" />
            
            <Entry x:Name="input" Placeholder="Tutaj wyświetli się ciekawostka" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>